{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ESNext",
      "dom"
    ],
    "module": "ESNext",
    "resolveJsonModule": true,
    "target": "es6"
  },
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "../../node_modules",
    "**/node_modules/*"
  ]
}
